{
  "name": "@softwarity/geojson-editor",
  "version": "1.0.24",
  "description": "A feature-rich GeoJSON editor Web Component with syntax highlighting, collapsible nodes, and color picker",
  "type": "module",
  "main": "./dist/geojson-editor.js",
  "module": "./dist/geojson-editor.js",
  "types": "./types/geojson-editor.d.ts",
  "exports": {
    ".": {
      "import": "./dist/geojson-editor.js",
      "types": "./types/geojson-editor.d.ts"
    },
    "./themes/*.css": "./themes/*.css",
    "./themes/vscode.css": "./themes/vscode.css",
    "./themes/github.css": "./themes/github.css",
    "./themes/monokai.css": "./themes/monokai.css",
    "./themes/solarized.css": "./themes/solarized.css"
  },
  "files": [
    "dist",
    "src",
    "types",
    "themes"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir types && cp src/geojson-editor.d.ts types/ && rm -f types/constants.d.ts types/utils.d.ts types/validation.d.ts types/syntax-highlighter.d.ts types/geojson-editor.template.d.ts types/internal-types.d.ts",
    "preview": "vite preview",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwarity/geojson-editor.git"
  },
  "bugs": {
    "url": "https://github.com/softwarity/geojson-editor/issues"
  },
  "homepage": "https://softwarity.github.io/geojson-editor/",
  "keywords": [
    "geojson",
    "editor",
    "web-component",
    "custom-element",
    "syntax-highlighting",
    "json-editor"
  ],
  "author": "Softwarity",
  "license": "MIT",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@types/geojson": "^7946.0.16",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "minify-literals": "^1.0.10",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  }
}
